.login-page {
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  min-height: 100vh;
}

.login-page .overlap-wrapper {
  background-color: #ffffff;
  min-height: 100vh;
  width: 100%;
  max-width: 1920px;
}

.login-page .overlap {
  background-image: url("/placeholder.svg?height=1080&width=1920");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 100vh;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.login-page .login-box {
  background-color: #ffffff;
  /* Diagonal corner pattern: top-left(0px) top-right(40px) bottom-left(40px) bottom-right(0px) */
  border-radius: 0px 40px 40px 0px;
  box-shadow: 0px 4px 50px -11px #00000040;
  width: 100%;
  max-width: 759px;
  position: relative;
  overflow: hidden;
}

.login-page .meron-top {
  background: linear-gradient(90deg, rgba(176, 13, 21, 1) 0%, rgba(63, 0, 3, 1) 100%);
  /* Header follows the same corner pattern as the box */
  border-radius: 0px 40px 0px 0px;
  height: 82px;
  width: 100%;
  position: relative;
}

.login-page .login-form-content {
  padding: 40px;
}

.login-page .text-wrapper {
  color: #000000;
  font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 32px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40px;
  letter-spacing: 0;
  line-height: normal;
}

.login-page .login-form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.login-page .input-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.login-page .mobile-number,
.login-page .enter-password {
  width: 100%;
}

.login-page .input-container {
  position: relative;
  width: 100%;
}

.login-page .input-wrapper {
  background-color: #eeeeee;
  height: 65px;
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
}

.login-page .rectangle {
  background-color: #b00d15;
  height: 65px;
  width: 8px;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.login-page .input-icon {
  margin-left: 24px;
  margin-right: 12px;
  height: 20px;
  width: 20px;
  color: #666666;
  flex-shrink: 0;
}

.login-page .input-field {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 20px;
  font-weight: 600;
  color: #000000;
  padding: 0;
  height: 100%;
}

.login-page .input-field::placeholder {
  color: #00000066;
}

.login-page .input-field:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.login-page .password-toggle {
  background: none;
  border: none;
  cursor: pointer;
  padding: 8px;
  margin-right: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666666;
  transition: color 0.2s ease;
}

.login-page .password-toggle:hover:not(:disabled) {
  color: #333333;
}

.login-page .password-toggle:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.login-page .toggle-icon {
  height: 20px;
  width: 20px;
}

.login-page .error-message {
  color: #dc2626;
  font-size: 14px;
  margin-left: 8px;
  font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

.login-page .login-button {
  background: none;
  border: none;
  cursor: pointer;
  align-self: center;
  margin-top: 20px;
  transition: transform 0.2s ease;
}

.login-page .login-button:hover:not(:disabled) {
  transform: translateY(-1px);
}

.login-page .login-button:disabled {
  cursor: not-allowed;
  opacity: 0.8;
}

.login-page .div-wrapper {
  background-color: #57585a;
  border-radius: 100px;
  height: 56px;
  width: 131px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.login-page .login-button:hover:not(:disabled) .div-wrapper {
  background-color: #45464a;
}

.login-page .login-button:disabled .div-wrapper {
  background-color: #9ca3af;
}

.login-page .text-wrapper-2 {
  color: #ffffff;
  font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 20px;
  font-weight: 600;
  letter-spacing: 0;
  line-height: normal;
}

.login-page .loading-content {
  display: flex;
  align-items: center;
  gap: 8px;
}

.login-page .loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #ffffff33;
  border-top: 2px solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.login-page .register-text {
  color: transparent;
  font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 20px;
  font-weight: 600;
  text-align: center;
  margin-top: 20px;
  letter-spacing: 0;
  line-height: normal;
}

.login-page .span {
  color: #000000;
}

.login-page .signup-link {
  color: #b00d15;
  background: none;
  border: none;
  cursor: pointer;
  font-family: inherit;
  font-size: inherit;
  font-weight: inherit;
  text-decoration: none;
  transition: text-decoration 0.2s ease;
}

.login-page .signup-link:hover {
  text-decoration: underline;
}

.login-page .signup-link:focus {
  outline: 2px solid #b00d15;
  outline-offset: 2px;
  text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 768px) {
  .login-page .overlap {
    padding: 10px;
  }

  .login-page .login-form-content {
    padding: 30px 20px;
  }

  .login-page .text-wrapper {
    font-size: 28px;
    margin-bottom: 30px;
  }

  .login-page .input-field {
    font-size: 18px;
  }

  .login-page .register-text {
    font-size: 18px;
  }
}

@media (max-width: 480px) {
  .login-page .login-form-content {
    padding: 20px 15px;
  }

  .login-page .text-wrapper {
    font-size: 24px;
  }

  .login-page .input-field {
    font-size: 16px;
  }

  .login-page .text-wrapper-2 {
    font-size: 18px;
  }

  .login-page .register-text {
    font-size: 16px;
  }
}
